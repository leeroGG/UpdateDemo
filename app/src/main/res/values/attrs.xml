<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--圆环进度条-->
    <attr name="progress" format="reference|integer"/>
    <attr name="progressWidth" format="dimension|reference|float"/>
    <attr name="progressColor" format="color|reference|integer"/>
    <attr name="backgroundColor" format="color|reference|integer"/>
    <declare-styleable name="CircleProgressBar">
        <attr name="progress"/>
        <attr name="progressWidth"/>
        <attr name="progressColor"/>
        <attr name="backgroundColor"/>
    </declare-styleable>

    <declare-styleable name="RingProgressBar">
        <attr name="ringColor" format="color" />
        <attr name="ringProgressColor" format="color" />
        <attr name="ringWidth" format="dimension" />
        <attr name="textColor" format="color" />
        <attr name="textSize" format="dimension" />
        <attr name="max" format="integer" />
        <attr name="textIsShow" format="boolean" />
        <attr name="style">
            <enum name="STROKE" value="0" />
            <enum name="FILL" value="1" />
        </attr>
    </declare-styleable>

</resources>